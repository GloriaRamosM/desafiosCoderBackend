<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurar Contraseña</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Restaura la
        Contraseña del Usuario</h1>

      <form id="restoreForm" class="space-y-4">
        <div class="flex flex-col">
          <label for="email" class="text-lg font-medium text-gray-700">Correo
            Electrónico</label>
          <input
            id="email"
            name="email"
            type="email"
            value="{{email}}"
            class="mt-1 p-2 border border-gray-300 rounded-md w-full bg-white text-gray-800"
          />
        </div>

        <div class="flex flex-col">
          <label for="password" class="text-lg font-medium text-gray-700">Nueva
            Contraseña</label>
          <input
            name="password"
            type="password"
            class="mt-1 p-2 border border-gray-300 rounded-md w-full bg-white text-gray-800"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >Restaurar Contraseña</button>
      </form>
    </div>

    <script src="/js/restore.js"></script>
  </body>
</html>