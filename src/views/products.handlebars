<div>
  <h1>Bienvenido a tu perfil</h1>
  <p>{{user.name}}</p>
  <p>{{user.email}}</p>
  <p>{{user.age}}</p>
  <p>ROL: {{user.rol}}</p>
  <button id="logout">Cerrar Sesión</button>
  <button id="initializeCart">Inicializar Carrito</button>
  <p id="cartStatusMessage"></p>

  <!-- Carrito con contador de productos -->
  <div id="cartStatus">
    <img src="" alt="Carrito" id="cartIcon" class="cart-icon" />
    <span id="cartItemCount">0</span>
  </div>

  <!-- Botón para finalizar compra -->
  <button id="finalizePurchase">Finalizar Compra</button>
</div>

{{#if hasProducts}}
  <h2>Listado de Productos</h2>
  <hr />
  <div>
    {{#each payload}}
      <div>
        <p><strong>Nombre:</strong> {{title}}</p>
        <p><strong>Descripción:</strong> {{description}}</p>
        <p><strong>Precio:</strong> {{price}}</p>
        <p><strong>Categoría:</strong> {{category}}</p>
        <p><strong>Stock:</strong> {{stock}}</p>
        <button class="addToCart" data-pid="{{_id}}">Agregar al carrito</button>
      </div>
      <br />
    {{/each}}
  </div>
  <br />
  <hr />
  <div>
    {{#if hasPrevPage}}
      <a href="{{prevLink}}">&lt;&lt; Anterior</a>
    {{/if}}
    {{currentPage}}
    {{#if hasNextPage}}
      <a href="{{nextLink}}">Siguiente &gt;&gt;</a>
    {{/if}}
  </div>
{{else}}
  {{#if isValidPage}}
    <h2>No hay productos en esta página</h2>
  {{else}}
    <h2>No hay productos</h2>
  {{/if}}
{{/if}}

<script src="/js/products.js"></script>